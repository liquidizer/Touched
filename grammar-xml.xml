<grammar>
  <item name="XML/Document" type="xml.doc" new="Generic XML Document">
    &lt;?xml version='1.0'?&gt;
    <group name="Root" repeat="1">
      <arg type="xml.node" name="root-node"/>
    </group>
  </item>

  <item name="XML/Tag" type="xml.node">
    &lt;<arg type="text" name="tag" class="arg-bold"/>&gt;
    <group name="Attributes" repeat="*">
      <arg type="xml.attr" name="attrib"/>
    </group>
    <group name="Children" repreat="*" class="box-body">
      <arg type="xml.node" name="node"/>
    </group>
  </item>

  <item name="XML/Attribute" type="xml.attr">
    <arg type="text" name="attrib"/>
    =<arg type="exp.string" name="value"/>
  </item>
</grammar>
