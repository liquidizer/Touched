<grammar>
  <item name="D3/Script" type="d3.script" new="D3 Visualisation">  
    D3 command List
       
    <group name="Data" repeat="*" class="box-body">
      <arg type="d3.cmd" name="command"/>
      <!--<arg type="number|range" name="command"/>-->
    </group>    
  </item>

  <item name="D3/Data" type="d3.data.csv">
    Data: <arg type="text|file" name="filename"/>
    <group name="Data" repeat="*" class="box-body">
      <arg type="d3.filter" name="filter"/>
    </group>
  </item>
  
  <item name="Range" type="range">
    <arg type="number" name="start"/> â†’ <arg type="number" name="end"/>
  </item>
  
  <item name="D3/Filter/Row" type="d3.filter.keeprow">
    Keep Row: <arg type="number|range" name="rows"/>
  </item>
  
  <item name="D3/Filter/Column" type="d3.filter.keepcolumn">
    Keep Column: <arg type="number|range" name="columns"/>
  </item>  
  
  <item name="D3/Filter/RemoveRow" type="d3.filter.removerow">
    Remove Rows: <arg type="number|range" name="rows"/>
  </item>
  
  <item name="D3/Filter/SelectByValue" type="d3.filter.selectcolumnbyvalue">
    Select By : Row <arg type="number" name="rownumber"/> = <arg type="number|text|range" name="value"/>
  </item>
  
  <item name="D3/Filter/RemoveColumn" type="d3.filter.removecolumn">
    Remove Columns: <arg type="number|range" name="columns"/>
  </item>  
  
  <item name="D3/Transpose" type="d3.filter.transpose">
    transpose
  </item>  

  <item name="D3/Sort" type="d3.filter.sort">
    Sort by Column: <arg type="number" name="column"/>
  </item>  

  <item name="D3/Plot/LineChart" type="d3.cmd.line">
    Plot <arg type="d3.data" name="data"/>
    <group name="options" repeat="*" class="box-body">
        <arg type="d3.plotoption" name="option"/>
    </group>
  </item>
  
  <!--item name="D3/PlotOption/Circle" type="d3.plot-option.circle">
    circle
  </item-->

  <item name="D3/PlotOption/Size" type="d3.plotoption.size">
    Size: <arg type="number" name="width"/> x <arg type="number" name="height"/>
  </item>

  <item name="D3/PlotOption/XAxis" type="d3.plotoption.XAxis">
    XAxis: <arg type="number" name="column"/> 
  </item>
  
  <item name="D3/Plot/Table" type="d3.cmd.table">
    Table <arg type="d3.data" name="data"/>
  </item>
  
  <item name="D3/Caption" type="d3.cmd.caption">
    Caption <arg type="text" name="caption"/>
  </item>
  

</grammar>
