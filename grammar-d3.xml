<grammar>
  <item name="D3/Script" type="d3.script" new="D3 Visualisation">  
    <group name="Data" repeat="*" class="box-body">
      <arg type="d3.cmd" name="command"/>
    </group>    
    <group name="Plot" repeat="*" class="box-body">
      <arg type="d3.plot" name="plot"/>
    </group>
  </item>

  <item name="D3/Data" type="d3.cmd.select">
    Data: <arg type="text|file" name="filename"/>
    <group name="Data" repeat="*" class="box-body">
      <arg type="d3.data" name="command"/>
    </group>
  </item>
  
  <item name="D3/Row" type="d3.data">
    Row: <arg type="text" name="startrow"/> → <arg type="text" name="endrow"/>
  </item>
  
  <item name="D3/Column" type="d3.data">
    Column: <arg type="text" name="startcolumn"/> → <arg type="text" name="endcolumn"/>
  </item>  
  
  <item name="D3/Transpose" type="d3.data.transpose">
    transpose
  </item>  

  <item name="D3/Append" type="d3.plot.append">
    .append(<arg type="svg.shape" name="Appendtag"/>)
  </item>

  <item name="D3/Attr" type="d3.plot.attr">
    .attr(<arg type="text" name="attrib"/>, <arg type="text" name="value"/>)
  </item>
  
  <item name="SVG/Shape/Circle" type="svg.shape.circle">
    circle
  </item>

  <item name="SVG/Shape/Rect" type="svg.shape.rect">
    rect
  </item>
 
</grammar>
