<grammar>
  <item name="Formula/Formula List" type="exp.list" new="Formula List">
    Formula List:
    <group name="Root" repeat="*" class="box-body">
      <arg type="exp.formula|number" name="formula"/>
    </group>
  </item>

  <item name="Formula/Plus" type="exp.formula">
    <arg type="exp.formula|number" name="left"/>
    +
    <arg type="exp.formula|number" name="right"/>
  </item>

  <item name="Formula/Times" type="exp.formula">
    <arg type="exp.formula|number" name="left"/>
    Ã—
    <arg type="exp.formula|number" name="right"/>
  </item>

  <item name="Formula/Functions/Sin" type="exp.formula">
    sin(<arg type="exp.formula|numbernumber" name="arg"/>)
  </item>

  <item name="Formula/Functions/Cos" type="exp.formula">
    cos(<arg type="exp.formula|number" name="arg"/>)
  </item>

  <item name="Formula/Functions/Tan" type="exp.formula">
    tan(<arg type="exp.formula|number" name="arg"/>)
  </item>

</grammar>
